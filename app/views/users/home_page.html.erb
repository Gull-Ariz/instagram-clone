<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= render 'shared/stories' %><br />
      <% @posts.each do |post|%>
        <div class='insta-post'>
          <div class='post-meta'>
            <% if post.user.profile_picture.attached? %>
              <%= image_tag post.user.profile_picture, class: 'profile-pic'%>
            <% else %>
              <%= image_tag 'default_dp.jpg', width: '50px', height: '50px', class: 'profile-pic'%>
            <%end%>
            <%= link_to post.user.user_name, profile_path(post.user.id), class:'profile-path'%>
          </div>
          <% if policy(post).update? && policy(post).destroy?%>
            <%= link_to edit_post_path(post.id), class: 'p-2' do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
              </svg>
            <%end%>
            <%= link_to  post_path(post.id), class: 'p-2', method: :delete, data: { confirm: 'Are you sure?' } do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
              </svg>
            <%end%>
          <%end%>
          <div class='post-details'>
            <%= link_to post.description, post_path(post), class:'profile-path'%>
          </div>
          <% if !post.images.nil? %>
            <div id='carouselExampleSlidesOnly' class='carousel slide' data-bs-ride='carousel'>
              <div class='carousel-inner'>
                <% post.images.each_with_index do |image, i|%>
                  <div class='carousel-item <%= 'active ' if i == 0 %> '>
                    <%= cl_image_tag(image.key, class:'post-image') %>
                  </div>
                <%end%>
              </div>
              <button class='carousel-control-prev' type='button' data-bs-target='#carouselExampleControls' data-bs-slide='prev'>
                <span class='carousel-control-prev-icon' aria-hidden='true'></span>
                <span class='visually-hidden'>Previous</span>
              </button>
              <button class='carousel-control-next' type='button' data-bs-target='#carouselExampleControls' data-bs-slide='next'>
                <span class='carousel-control-next-icon' aria-hidden='true'></span>
                <span class='visually-hidden'>Next</span>
              </button>
            </div>
          <%end%>
          <p class='text-muted'><%= time_ago_in_words post.created_at %>ago</p>
        </div>
      <%end%>
    </div>
    <div class="col-md-4">
      <div class='account-summary'>
        <% if current_user.profile_picture.attached? %>
          <%= image_tag current_user.profile_picture, class: 'profile-pic'%>
        <% else %>
          <%= image_tag 'default_dp.jpg', width: '50px', height: '50px', class: 'profile-pic'%>
        <%end%>
        <%= link_to current_user.user_name, profile_path(current_user.id), class:'profile-path'%>
      </div>
      <div class='follower-suggestions'>
        <p class='text-muted'>Suggestionsfor you</p>
        <%= render 'shared/followers_suggestion'%>
      </div>
    </div>
  </div>
</div>
