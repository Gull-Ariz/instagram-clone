<div class='container top-margin'>
  <div class='row'>
    <div class='col-4'>
      <% if @user.profile_picture.attached? %>
        <%= image_tag @user.profile_picture, class: 'profile-pic'%>
      <% else %>
        <%= image_tag 'default_dp.jpg', class: 'profile-pic'%>
      <%end%>
    </div>
    <div class='col-8 text-left'>
      <h1><%= @user.user_name%></h1>
      <%= link_to 'Edit Profile', edit_user_registration_path, class:'btn btn-secondary profile-path'%>
      <div class='profile-stats'>
        <%= @user.posts.count %> posts
      </div>
      <div class='profile-stats'>
        <%= @user.followers.count %> followers
      </div>
      <div class='profile-stats'>
        <%= @user.followeds.count %> following
      </div>
      <br /><%= @user.bio%>
    </div>
  </div>
  <div class='row'>
    <% @user.posts.each do |post| %>
      <div class='col-4'>
        <div class='d-flex flex-row justify-content-center'>
          <% post.images.each do |image|%>
            <%= image_tag image, class: 'mt-5 p-5'%>
          <%end%>
        </div>
      </div>
    <%end%>
  </div>
</div>
