<% followers.each do |follower| %>
  <div class='container mt-5'>
    <div class="d-flex justify-content-center row">
      <div class="col-md-6">
        <div class="p-3 bg-white text-center">
          <div>
            Your Followers
          </div>
          <div class="d-flex flex-row justify-content-between align-items-center">
            <div class="d-flex flex-row align-items-center">
              <%= render 'shared/profile_picture', profile_picture: follower.follower.profile_picture%>
              <div class="d-flex flex-column align-items-start ml-2">
                <span class="font-weight-bold"><%= link_to follower.follower.user_name, user_path(follower.follower.id), class:'profile-path'%>
                </span>
              </div>
            </div>
            <div class="d-flex flex-row align-items-center mt-2">
              <%= form_tag(unfollow_user_path(follower.follower.id), method: :post, remote: true) do %>
                <%= hidden_field_tag :user_id, follower.follower.id %>
                <%= submit_tag "UnFollow", class: "btn btn-info"%>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%end%>
