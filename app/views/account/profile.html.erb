<div class='container top-margin'>
  <div class='row'>
    <div class='col-4'>
      <%= image_tag @user.profile_picture, width: '200px', height: '200px', class: 'profile-pic'%>
    </div>
    <div class='col-8 text-left'>
      <h1><%= @user.user_name%></h1>
      <%= link_to 'Edit Profile', edit_user_registration_path, class:'btn btn-secondary profile-path'%>
      <div class='profile-stats'>
        <%= @user.posts.count %> posts
      </div>
      <div class='profile-stats'>
        <%= @user.followers.count %> followers
      </div>
      <div class='profile-stats'>
        <%= @user.followeds.count %> following
      </div>
      <br /><%= @user.bio%>
    </div>
  </div>
  <div class='row'>
    <% @user.posts.each do |post| %>
      <div class='col-4'>
        <div class='insta-post'>
          <% post.images.each do |image|%>
            <%= image_tag image, class: 'img img-fluid'%>
          <%end%>
        </div>
      </div>
    <%end%>
  </div>
</div>
