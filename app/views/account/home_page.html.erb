<div class="container">
  <div class="row">
    <div class="col-md-8">
      <% @posts.each do |post|%>
        <div class='insta-post'>
          <div class='post-meta'>
            <%= image_tag post.user.profile_picture, width:'50px', height:'50px', class: 'profile-pic'%>
            <%= link_to post.user.user_name, profile_path(post.user.id), class:'profile-path'%>
          </div>
          <div class='post-details'>
            <%= post.description%>
          </div>
          <div id='carouselExampleSlidesOnly' class='carousel slide' data-bs-ride='carousel'>
            <div class='carousel-inner'>
              <% post.images.each_with_index do |image, i|%>
                <div class='carousel-item <%= 'active ' if i == 0 %> '>
                  <div class='imageContainer'>
                    <%= image_tag(image, class: 'd-block w-75')%>
                  </div>
                </div>
              <%end%>
            </div>
            <button class='carousel-control-prev' type='button' data-bs-target='#carouselExampleControls' data-bs-slide='prev'>
              <span class='carousel-control-prev-icon' aria-hidden='true'></span>
              <span class='visually-hidden'>Previous</span>
            </button>
            <button class='carousel-control-next' type='button' data-bs-target='#carouselExampleControls' data-bs-slide='next'>
              <span class='carousel-control-next-icon' aria-hidden='true'></span>
              <span class='visually-hidden'>Next</span>
            </button>
          </div>
          <p class='text-muted'><%= time_ago_in_words post.created_at %>ago</p>
        </div>
      <%end%>
    </div>
    <div class="col-md-4">
      <div class='account-summary'>
        <%= image_tag current_user.profile_picture, width:'50px', height:'50px', class: 'profile-pic'%>
        <%= link_to current_user.user_name, profile_path(current_user.id), class:'profile-path'%>
      </div>
      <div class='follower-suggestions'>
        <p class='text-muted'>Suggestionsfor you</p>
        <%= render 'shared/followers_suggestion'%>
      </div>
    </div>
  </div>
</div>
