<%= form_with model: @post, local: true do |form|%>
  <% if @post.errors.any? %>
    <h2>
        <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <%end%>
  <div>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </div>

