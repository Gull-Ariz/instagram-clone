<div class='container top-margin'>
  <%= render 'shared/flashmessage' %>
  <%= form_with model: @post, local: true do |form|%>
    <div class='form-group'>
      <%= form.label :description %><br>
      <%= form.text_area :description, class: 'form-control', required: true, minlength: "5"%><br />
    </div>

    <div class='form-group'>
      <%= form.label :images%>
      <%= form.file_field :images, multiple: true, required: true, accept:'image/png, image/gif, image/jpeg, image/jpg', id: 'images-count', class: 'form-control', data: { images_count: @post.images.count }%><br />
    </div>

    <div class='form-group'>
      <%= form.submit "Create", class: 'btn btn-success' %>
    </div>
  <% end%>
</div>

