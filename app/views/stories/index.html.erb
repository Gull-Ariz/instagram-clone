<div class="container">
  <% @stories.each do |story| %>
    <%= image_tag(User.find(story.user_id).profile_picture, style:"width:50px; height:50px; margin-top:30px;")%>
    <p><%= User.find(story.user_id).user_name%></p>
    <% if story.user_id.eql? current_user.id%>
      <button ><%= link_to 'Delete', story_path(story),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></button>
    <%end%>
    <%= (0...story.images.count).each do |image|%>
      <div style="width:300px; height:300px;">
        <%= image_tag(story.images[image], style:"width:100%; height:auto;")%>
      </div>
    <%end%>
  <%end%>
</div>
