<% follow_requests.each do |request| %>
  <div class='recommended-follower'>
    <div class='row'>
      <div class='col-sm-3 col-lg-2'>
        <%= render 'shared/profile_picture', profile_picture: request.follower.profile_picture%>
      </div>
      <div class='col-sm-9 col-lg-10'>
        <%= link_to request.follower.user_name, user_path(request.follower.id), class:'profile-path'%>
        <div class='float-end'>
          <%= form_tag(accept_request_user_path(request.follower_id), method: :post, remote: true) do %>
            <%= hidden_field_tag :user_id, request.user_id %>
            <%= submit_tag "Accept", class: "btn btn-info"%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
<%end%>
