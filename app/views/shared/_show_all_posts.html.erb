<% @posts.each do |post| %>
  <%= image_tag(User.find(post.user_id).profile_picture, style:"width:50px; height:50px; margin-top:30px;")%>
  <p><%= User.find(post.user_id).user_name%></p>
  <% if post.user_id.eql? current_user.id%>
  <button ><%= link_to 'Edit',edit_post_path(post)%></button>
  <button ><%= link_to 'Delete', post_path(post),
    method: :delete,
    data: { confirm: 'Are you sure?' } %></button>
  <%end%>
  <p><%= post.description%></p>
  <% (0...post.images.count).each do |image|%>
    <div style="width:300px; height:300px;">
      <%= image_tag(post.images[image], style:"width:100%; height:auto;")%>
    </div>
  <%end%>
<%end%>
